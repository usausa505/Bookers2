<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'userinfo', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= image_tag @user.get_profile_image(80,80) %>
                  <%= @user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@bookdetail.id) do %>
                  <%= @bookdetail.title %>
                <% end %>
              </td>
              <td>
                <%= @bookdetail.body %>
              </td>
              <% if @user == current_user %>
                <td>
                  <%= link_to "Edit", edit_book_path(@bookdetail.id), class: "btn btn-sm btn-success" %>
                </td>
                <td>
                  <%= link_to "Destroy", book_path(@bookdetail), method: :delete, class: "btn btn-sm btn-danger" %>
                </td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
